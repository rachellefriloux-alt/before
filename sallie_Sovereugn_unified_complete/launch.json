{
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Vite Dev Server",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "dev"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Run Vitest Tests",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "test"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Android App (JDWP)",
            "address": "localhost",
            "port": "${input:jdwpPort}",
            "preLaunchTask": "assembleDebug"
        }
    ],
    "inputs": [
        {
            "type": "promptString",
            "id": "jdwpPort",
            "description": "Enter the forwarded JDWP debug port (after using 'adb forward tcp:PORT jdwp:<pid>')"
        }
    ]
}

{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Sallie â€” Build + Install + Debug + Logs",
      "type": "node",
      "request": "launch",
      "preLaunchTask": "preFlight",
      "postDebugTask": "stopLogcat"
    }
  ],
  "tasks": {
    "version": "2.0.0",
    "tasks": [
      {
        "label": "preFlight",
        "type": "shell",
        "command": "gradlew.bat ktlintCheck && npm run lint && npm test",
        "options": { "cwd": "${workspaceFolder}" },
        "problemMatcher": []
      },
      {
        "label": "assembleAndInstall",
        "type": "shell",
        "command": "gradlew.bat clean assembleDebug installDebug && start cmd /k \"adb logcat | findstr Sallie\"",
        "options": { "cwd": "${workspaceFolder}" },
        "problemMatcher": []
      },
      {
        "label": "stopLogcat",
        "type": "shell",
        "command": "adb kill-server",
        "problemMatcher": []
      }
    ]
  }
}


