{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "dom",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@src/*": [
        "./src/*"
      ],
      "@core/*": [
        "./core/*"
      ],
      "@ui/*": [
        "./ui/*"
      ],
      "@store/*": [
        "./store/*"
      ],
      "@components/*": [
        "./src/components/*"
      ],
      "@screens/*": [
        "./src/screens/*"
      ],
      "@utils/*": [
        "./src/utils/*"
      ],
      "@types/*": [
        "./types/*"
      ],
      "@ai/*": [
        "./ai/*"
      ],
      "@assets/*": [
        "./assets/*"
      ]
    },
    "skipLibCheck": true
  },
  "include": [
    "App.tsx",
    "core/**/*.ts",
    "core/**/*.tsx", 
    "apps/android-launcher/src/**/*.ts",
    "apps/android-launcher/src/**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "App.web.tsx",
    "**/*.js",
    "**/*.jsx",
    "src/**",
    "feature/**",
    "e/**",
    "vite.config.ts",
    "vitest.config.js"
  ]
}
