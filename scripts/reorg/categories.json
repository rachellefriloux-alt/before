        "PerformanceMonitoringSystem.ts",
        "ResearchLearningSystem.ts",
        "ResearchService.ts",
        "SystemOrchestrator.ts",
        "VisionService.ts",
        "VoiceInteractionSystem.ts",
        "VoiceSystemManager.ts",
        "SallieInterface.js",
        "SallieLogger.js"
      ]
    },
    {
